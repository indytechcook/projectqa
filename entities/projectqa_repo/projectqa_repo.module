      'label' => t('ProjectQA Project'),
      'entity class' => 'ProjectQARepo',
      'controller class' => 'ProjectQARepoController',
      'base table' => 'projectqa_repo',
      'uri callback' => 'projectqa_repo_uri',
      'fieldable' => TRUE,
      'entity keys' => array(
        'id' => 'pid',
      ),
